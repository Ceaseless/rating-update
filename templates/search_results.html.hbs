    <body>
        {{> header stats}}

        <div>{{> search_form}}</div>
    
        <div>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Character</th>
                    <th>Rating</th>
                    <th>Games played</th>
                </tr>
                {{#each players}}
                    <tr>
                        <td>{{>player_link name=this.name id=this.id vip_status=this.vip_status}}</td>
                        <td>{{this.character}}</td>
                        <td>{{this.rating_value}} Â±{{this.rating_deviation}}</td>
                        <td>{{this.game_count}}</td>
                    </tr
                {{/each}}
            </table>
        </div>
    </body>
